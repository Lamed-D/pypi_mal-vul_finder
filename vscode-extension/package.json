{
  "name": "zip-uploader",
  "displayName": "Zip Uploader",
  "description": "선택한 폴더를 ZIP으로 압축해 로컬 Python 서버로 업로드하고, 응답 ZIP을 저장합니다.",
  "version": "0.1.0",
  "publisher": "lamed",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-extension.uploadZipToLocal",
        "title": "Zip folder and upload to Python server"
      },
      {
        "command": "vscode-extension.extractPythonPackages",
        "title": "Extract Python packages and upload to server"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "build": "npm run compile",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/archiver": "^5.3.1",
    "@types/node": "^20.12.7",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.5",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "archiver": "^5.3.1",
    "axios": "^1.7.2",
    "form-data": "^4.0.0"
  }
}
