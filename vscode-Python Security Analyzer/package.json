{
  "name": "python-security-analyzer",
  "displayName": "Python Security Analyzer",
  "description": "Python 코드 보안 분석을 위한 VS Code Extension. 프로젝트를 ZIP으로 압축하여 AI 기반 보안 분석 서버로 전송합니다.",
  "version": "0.1.0",
  "publisher": "lamed",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-extension.uploadZipToLocal",
        "title": "Python Security: 기본 분석 (취약+악성)"
      },
      {
        "command": "vscode-extension.extractPythonPackages",
        "title": "Python Security: 설치 패키지 분석 (ML)"
      },
      {
        "command": "vscode-extension.upload.lstm",
        "title": "Python Security: LSTM 통합 분석 (취약+악성)"
      },
      {
        "command": "vscode-extension.upload.lstm.mal",
        "title": "Python Security: LSTM 악성만 분석"
      },
      {
        "command": "vscode-extension.upload.lstm.vul",
        "title": "Python Security: LSTM 취약점만 분석"
      },
      {
        "command": "vscode-extension.upload.bert",
        "title": "Python Security: BERT 통합 분석 (취약+악성)"
      },
      {
        "command": "vscode-extension.upload.bert.mal",
        "title": "Python Security: BERT 악성만 분석"
      },
      {
        "command": "vscode-extension.upload.bert.vul",
        "title": "Python Security: BERT 취약점만 분석"
      },
      {
        "command": "vscode-extension.upload.ml",
        "title": "Python Security: ML 패키지 분석 (LSTM+XGBoost)"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "build": "npm run compile",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/archiver": "^5.3.1",
    "@types/node": "^20.12.7",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.5",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "archiver": "^5.3.1",
    "axios": "^1.7.2",
    "form-data": "^4.0.0"
  }
}
